  },
  "homepage": "https://github.com/jan-martinek/txoy#readme",
  "dependencies": {
    "autosize": "^4.0.0",
    "babel-preset-env": "^1.6.1",
    "browserify": "^14.5.0",
    "codemirror": "^5.31.0",
    "foundation-sites": "^6.4.4-rc1",
    "jshint": "^2.9.5",
    "marked": "^0.3.6",
    "p.turtle": "^0.1.2",
    "p5": "^0.5.16"
  },
