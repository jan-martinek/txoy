{
  "name": "txoy",
  "version": "0.1.1",
  "description": "Txoy — transform textareas to various interactive coding editors",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bundle": "browserify src/main.js -o dist/txoy.js -t [ babelify --presets [ env ] ]",
